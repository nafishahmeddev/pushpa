<html>

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Fira+Sans+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <title>Token: #<%= kot.tokenNo %>
    </title>
    <style>
        * {
            margin: 0;
            padding: 0
        }

        :root {
            font-family: "Fira Sans Condensed", sans-serif;
            box-sizing: border-box;
            font-size: 10px;

        }

        table {
            border-collapse: collapse;
        }

        th {
            padding: 5px 2px;
            text-align: left;
            font-size: 10px;
        }

        td {
            padding: 2px 2px;
            text-align: left;
            font-size: 10px;
        }

        th:nth-child(1),
        td:nth-child(1) {
            padding-left: 0;
        }

        @page {
            size: 80mm 120mm;
            margin: 0;
        }
    </style>
    <% const formatter=new Intl.NumberFormat("en-IN", { style: "currency" , currency: kot.restaurant.currency || "INR"
        }); const moment=locals.moment; %>
</head>

<body>
    <div style="padding:5px">
        <div style="text-align: center;">
            <h3 style="margin:0;">
                <%= kot.restaurant.name %>
            </h3>
        </div>
        <table style="font-weight: bold; width: 100%; margin-top: 15px; ">
            <tr>
                <td>ORDER NO: #<%= kot.order.orderNo %>
                </td>
                <td style="text-align: right;">Date: <%= moment(kot.createdAt).format("DD/MM/YYYY") %>
                </td>
            </tr>
        </table>
        <div>
            <table style="border-collapse: collapse; margin: 10px 0; width:100%; font-size: 14px;">
                <thead>
                    <tr style="border-bottom: 1px dashed #000; border-top: 1px dashed #000;">
                        <th>DESCRIPTION</th>
                        <th style="text-align: right;"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td></td>
                    </tr>
                    <% for(const item of kot.items ?? []){ %>
                        <tr>
                            <td>
                                <%= item?.product?.name %>
                            </td>
                            <td style="text-align: right; width: 0;">
                                x<%= item.quantity %>
                            </td>
                        </tr>
                        <%}%>
                </tbody>
            </table>
            <div style="margin: 8px 0;border-top: 1px dashed #000; "></div>

            <div style="text-align: center; font-weight: bold; font-size: 14px;">
                TOKEN NO: #<%= kot.tokenNo %>
            </div>
        </div>
    </div>
</body>

</html>